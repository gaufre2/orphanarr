// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node
{
  "name": "Node.js & TypeScript",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "image": "mcr.microsoft.com/devcontainers/typescript-node:3-22-bookworm",
  "features": {
    // TODO wait for the PR: https://github.com/devcontainers-extra/features/pull/149
    // "ghcr.io/devcontainers-extra/features/bun:1": {
    //   "version": "1.3.0"
    // }
  },

  // Mount points to set up when creating the container. More info at: https://containers.dev/implementors/json_reference
  "mounts": [
    // Mount local .ssh/
    {
      "source": "${localEnv:HOME}${localEnv:USERPROFILE}/.ssh",
      "target": "/home/node/.ssh",
      "type": "bind,readonly" // workaround: https://github.com/devcontainers/spec/issues/511
    }
  ],

  "customizations": {
    "vscode": {
      "extensions": [
        "oven.bun-vscode",
        "streetsidesoftware.code-spell-checker",
        "dotenv.dotenv-vscode",
        "dbaeumer.vscode-eslint",
        "tamasfe.even-better-toml",
        "esbenp.prettier-vscode",
        "Gruntfuggly.todo-tree",
        "redhat.vscode-yaml"
      ]
    }
  },

  // Use 'postCreateCommand' to run commands after the container is created.
  // TODO wait for the PR: https://github.com/devcontainers-extra/features/pull/149
  // "postCreateCommand": "bun install"

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],

  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}
